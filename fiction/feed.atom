<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text" xml:lang="en">fernseed</title>
    <link type="application/atom+xml" href="http://fernseed.org/feed/" rel="self"/>
    <link type="text/html" href="http://fernseed.org/" rel="alternate"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.url }}/</id>
    <rights>Copyright &copy; {{ site.time | date: '%Y' }} Darren McGuicken</rights>
    {% for post in site.categories.fiction %}
    <entry>
        <title>{{ post.title | downcase }}</title>
        <author>
            <name>Darren McGuicken</name>
            <uri>https://twitter.com/dmcgk</uri>
        </author>
        <link href="{{ site.url }}{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ site.url }}{{ post.url }}</id>
        <summary type="html">
            <![CDATA[
                {{ post.excerpt | strip_html | strip_newlines }}
            ]]>
        </summary>
    </entry>
    {% endfor %}
</feed>
