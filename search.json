---
---
[
    {% for post in site.categories.meta %}{
      "title"    : "{{ post.title }}",
      "summary"  : "{{ post.summary }}",
      "tags"     : "{{ post.tags | join: ", " }}",
      "url"      : "{{ post.url }}",
      "excerpt"  : "{{ post.excerpt | strip_html | strip_newlines }}",
      "date"     : {
         "day"   : "{{ post.date | date: "%d" }}",
         "month" : "{{ post.date | date: "%B" }}",
         "year"  : "{{ post.date | date: "%Y" }}"
      }
    },{% endfor %}
    {% for post in site.categories.serials %}{
      "title"    : "{{ post.title }}",
      "summary"  : "{{ post.summary }}",
      "tags"     : "{{ post.tags | join: ", " }}",
      "url"      : "{{ post.url }}",
      "excerpt"  : "{{ post.excerpt | strip_html | strip_newlines }}",
      "date"     : {
         "day"   : "{{ post.date | date: "%d" }}",
         "month" : "{{ post.date | date: "%B" }}",
         "year"  : "{{ post.date | date: "%Y" }}"
      }
    }{% unless forloop.last %},{% endunless %}{% endfor %}
]
